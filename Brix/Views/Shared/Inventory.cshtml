@{
}

@model Product

<div class="card m-1 p-1">
    <h4>
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price</small></span>
    </h4>

    <ul>
        <li>@Model.Name</li>
        <li>@Model.Year</li>
        <li>@Model.NumParts</li>
        <li>@Model.ImgLink</li>
        <li>@Model.PrimaryColor</li>
        <li>@Model.SecondaryColor</li>
        <li>@Model.Description</li>
        <li>@Model.Category</li>
    </ul>
</div>
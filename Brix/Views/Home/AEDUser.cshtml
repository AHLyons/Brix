@model IEnumerable<Brix.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<div class="container mt-5">
    <h2>@ViewBag.Title</h2>
    <div class="d-flex justify-content-between my-3">
        <a href="@Url.Action("NewUser", "Home")" class="btn btn-primary">Add New Customer</a>
        <a href="@Url.Action("AEDProduct", "Home")" class="btn btn-secondary">Manage Products</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Country Of Residence</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.BirthDate</td>
                        <td>@customer.CountryOfResidence</td>
                        <td>@customer.Gender</td>
                        <td>@customer.Age</td>
                        <td>
                            <a href="@Url.Action("EditUsers", "Home", new { id = customer.CustomerId })" class="btn btn-info btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteUsers", "Home", new { id = customer.CustomerId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    ViewData["Title"] = "Check for Fraud";
}
<h1>@ViewData["Title"]</h1>

@model IEnumerable<Brix.Models.FraudPrediction>

@{
    ViewData["Title"] = "Predictions";

    var FraudDict = new Dictionary<int, string>
{
        { 0, "Not Fraud" },
        { 1, "Fraud" }
    };
}

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }

</style>

<h2>Predictions</h2>
<div class="full-width-table">
    <table class="table">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Date</th>
                <th>Day of Week</th>
                <th>Time</th>
                <th>Entry Mode</th>
                <th>Amount</th>
                <th>Type of Transaction</th>
                <th>Country of Transaction</th>
                <th>Shipping Address</th>
                <th>Bank</th>
                <th>Type of Card</th>
                <th>Fraud</th>
                <th class="prediction-cell">Prediction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fraud.CustomerId</td>
                    <td>@item.Fraud.Date</td>
                    <td>@item.Fraud.DayOfWeek</td>
                    <td>@item.Fraud.Time</td>
                    <td>@item.Fraud.EntryMode</td>
                    <td>@item.Fraud.Amount</td>
                    <td>@item.Fraud.TypeOfTransaction</td>
                    <td>@item.Fraud.CountryOfTransaction</td>
                    <td>@item.Fraud.ShippingAddress</td>
                    <td>@item.Fraud.Bank</td>
                    <td>@item.Fraud.TypeOfCard</td>
                    <td>@FraudDict[@item.Fraud.Fraud]</td>
                    <td class="prediction-cell">@item.Prediction</td>
                </tr>
            }
        </tbody>
    </table>
</div>



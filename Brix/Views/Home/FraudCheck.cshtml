@{
    ViewData["Title"] = "Orders Summary and Check for Fraud";
}
<h1>@ViewData["Title"]</h1>

@model IEnumerable<Brix.Models.FraudPrediction>

@{

    var FraudDict = new Dictionary<int, string>
{
        { 0, "Not Fraud" },
        { 1, "Fraud" }
    };
}

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }

</style>

<br />
<div class="full-width-table">
    <table class="table">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Date</th>
                <th>Day of Week</th>
                <th>Time</th>
                <th>Entry Mode</th>
                <th>Amount</th>
                <th>Type of Transaction</th>
                <th>Country of Transaction</th>
                <th>Shipping Address</th>
                <th>Bank</th>
                <th>Type of Card</th>
                <th>Fraud Prediction</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Orders.CustomerId</td>
                    <td>@item.Orders.Date</td>
                    <td>@item.Orders.DayOfWeek</td>
                    <td>@item.Orders.Time</td>
                    <td>@item.Orders.EntryMode</td>
                    <td>@item.Orders.Amount</td>
                    <td>@item.Orders.TypeOfTransaction</td>
                    <td>@item.Orders.CountryOfTransaction</td>
                    <td>@item.Orders.ShippingAddress</td>
                    <td>@item.Orders.Bank</td>
                    <td>@item.Orders.TypeOfCard</td>
                    <td class="prediction-cell">@item.Prediction</td>
                </tr>
            }
        </tbody>
    </table>
</div>



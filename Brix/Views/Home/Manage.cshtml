@model Brix.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditUsers" method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Birth Date</label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CountryOfResidence" class="control-label">Country of Residence</label>
        <input asp-for="CountryOfResidence" class="form-control" />
        <span asp-validation-for="CountryOfResidence" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Age" class="control-label">Age</label>
        <input asp-for="Age" type="number" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    Html.RenderPartialAsync("_ValidationScriptsPartial")
}

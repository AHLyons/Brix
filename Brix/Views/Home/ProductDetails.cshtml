@{
    ViewData["Title"] = "Product Details";
}
@using Brix.Infrastructure
@model Brix.Models.Product

<h1>@ViewData["Title"]</h1>


<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <!-- Product Image -->
                    @if (Model.ImgLink != null)
                    {
                        <img src="@Model.ImgLink" alt="Product Image" class="img-fluid">
                    }
                    else
                    {
                        <div class="placeholder-image d-flex justify-content-center align-items-center" style="height: 400px; background-color: #f0f0f0;">
                            Insert Product Image Here
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <!-- Product Details -->
                    <h2>@Model.Name</h2>
                    <h3 class="my-3">Price: $@Model.Price</h3>
                    <p class="mb-4">@Model.Description</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Number of Parts</dt>
                        <dd class="col-sm-8">@Model.NumParts</dd>

                        <dt class="col-sm-4">Primary Color</dt>
                        <dd class="col-sm-8">@Model.PrimaryColor</dd>

                        <dt class="col-sm-4">Secondary Color</dt>
                        <dd class="col-sm-8">@Model.SecondaryColor</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>
                    </dl>

                    <form method="post" action="@Url.Action("AddToCart", "Cart", new { id = Model.ProductId })" class="mt-3">
                        <input type="submit" value="Add to Cart" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

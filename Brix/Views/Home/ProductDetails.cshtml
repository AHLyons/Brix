@{
    ViewData["Title"] = "Product Details";
}
@using Brix.Infrastructure
@model Brix.Models.ViewModels.ProductDetailsViewModel


<h1>@ViewData["Title"]</h1>


<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <!-- Product Image -->
                    @if (Model.Product.ImgLink != null)
                    {
                        <img src="@Model.Product.ImgLink" alt="Product Image" class="img-fluid">
                    }
                    else
                    {
                        <div class="placeholder-image d-flex justify-content-center align-items-center" style="height: 400px; background-color: #f0f0f0;">
                            Insert Product Image Here
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <!-- Product Details -->
                    <h2>@Model.Product.Name</h2>
                    <h3 class="my-3">Price: $@Model.Product.Price</h3>
                    <p class="mb-4">@Model.Product.Description</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Model.Product.Year</dd>

                        <dt class="col-sm-4">Number of Parts</dt>
                        <dd class="col-sm-8">@Model.Product.NumParts</dd>

                        <dt class="col-sm-4">Primary Color</dt>
                        <dd class="col-sm-8">@Model.Product.PrimaryColor</dd>

                        <dt class="col-sm-4">Secondary Color</dt>
                        <dd class="col-sm-8">@Model.Product.SecondaryColor</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Product.Category</dd>
                    </dl>

                    <form asp-controller="Home" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                        <input type="hidden" name="returnUrl" value="@Url.Action("ProductDetails", "Home", new { id = Model.Product.ProductId })" />
                        <button type="submit" class="btn btn-primary">Add To Cart</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Existing product details code -->

<!-- Recommended Products Section -->
<h2>Similar Products</h2>
<div class="row">
    @foreach (var recProduct in Model.RecommendedProducts)
    {
        <div class="col-sm-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@recProduct.ImgLink" alt="@recProduct.Name">
                <div class="card-body">
                    <p class="card-text">@recProduct.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("ProductDetails", "Home", new { id = recProduct.ProductId })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <small class="text-muted">$@recProduct.Price</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



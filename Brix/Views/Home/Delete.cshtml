@model Product

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <h3 class="card-title">@Model.Name (@Model.Year)</h3>
            <p class="card-text">Are you sure you want to delete this product? This action cannot be undone.</p>

            <form method="post" class="d-inline">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="@Url.Action("AEDProduct", "Home")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
